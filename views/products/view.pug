extends ../layouts/common.pug

block content
  h1 View product
  
  div.container
    .row
      .col-sm-6.col-md-4.col-lg-3
        .card.mb-3
          img.card-img-top(src= products.image)
          .card-body
            h5.card-title= products.name
            p.card-text= products.description
            a.btn.btn-primary(href='#') Add to cart
