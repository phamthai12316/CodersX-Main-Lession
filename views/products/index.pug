extends ../layouts/common.pug

block content
  
  h1 User List 

    a(href="/products/create") Create New Product
    form.form-inline(action="/products/search", method="GET")
      input.form-control.mr-sm-2(type="text" name="q" placeholder="Enter product")
      button.btn.btn-primary Search

  div.container
    .row
      each product in products
        .col-sm-6.col-md-4.col-lg-3
          .card.mb-3
            img.card-img-top(src= product.image)
            .card-body
              h5.card-title= product.name
              p.card-text= product.description
              a.btn.btn-primary(href='#') Add to cart


        

          