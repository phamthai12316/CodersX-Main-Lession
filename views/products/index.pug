extends ../layouts/common.pug

block content
  
  h1 Product List 

    a(href="/products/create") Create New Product
    form.form-inline(action="/products/search", method="GET")
      input.form-control.mr-sm-2(type="text" name="q" placeholder="Enter product")
      button.btn.btn-primary Search

  div.container
    .row
      each product in products
        .col-sm-6.col-md-4.col-lg-3
          .card.mb-3
            img.card-img-top(src= product.image)
            .card-body
              h5.card-title= product.name
              p.card-text(style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis")= product.description
              a.btn.btn-success.mr-2.mb-2(href='/cart/add/' + product.id) Add to cart
              a.btn.btn-primary.mb-2(href="/products/" + product.id) View  
              a.btn.btn-danger.mr-4(href="/products/" + product.id + "/update") Update
              a.btn.btn-warning(href="/products/" + product.id + "/delete") Delete

        

          