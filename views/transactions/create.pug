extends ../layouts/common.pug

block content 
    h1 Create transaction

    form(action="/transactions/create", method="POST")
        label Choose user:
        select(name="userId")
            each user in users
                option(value=user.id)=user.name
        span &nbsp;        
        label Choose book:
        select(name="bookId")
            each book in books
                option(value=book.id)=book.title      
        span &nbsp;        
        button(type="submit") Create
