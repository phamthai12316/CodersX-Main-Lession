extends ../layouts/common.pug

block content  
  h1 Create User
  if errors
    each error in errors
      .alert.alert-danger= error
  form.form-inline(action="/users/create", method="POST")
    .form-group
      label(for="name") Name
      input#name.form-control.mr-sm-2(type="text" name="name", value=values ? values.name : "")
      label(for="email") Email
      input#email.form-control.mr-sm-2(type="text" name="email", value=values ? values.email : "")
      label(for="password") Password
      input#password.form-control.mr-sm-2(type="text" name="password", value=values ? values.password : "")
      button.btn.btn-primary Create